<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- CSS - bootstrap -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi"
      crossorigin="anonymous"
    />
    <title>Tutorial database</title>
  </head>
  <body>
    <div class="container">
      <h3><%= title %></h3>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">ID</th>
            <th scope="col">Nama</th>
            <th scope="col">Kelas</th>
          </tr>
        </thead>
        <tbody>
          <% for (let user of users) { %>
          <tr>
            <th scope="row"><%= user.id%></th>
            <th scope="row"><%= user.nama%></th>
            <th scope="row"><%= user.kelas%></th>
          </tr>
          <% } %>
        </tbody>
      </table>
      <form action="/tambah" method="post">
        <h3>Tambah Mahasiswa baru</h3>
        <div class="row mb-3">
          <label for="namaMahasiswa" class="col-sm-2 col-form-label"
            >Nama Mahasiswa</label
          >
          <div class="col-sm-10">
            <input
              type="text"
              class="form-control"
              id="namaMahasiswa"
              name="nama"
            />
          </div>
        </div>
        <div class="row mb-3">
          <label for="kelasMahasiswa" class="col-sm-2 col-form-label"
            >Kelas</label
          >
          <div class="col-sm-10">
            <input
              type="text"
              class="form-control"
              id="kelasMahasiswa"
              name="kelas"
            />
          </div>
        </div>
        <button type="submit" class="btn btn-primary">Tambah</button>
      </form>
      <br />
      <form action="/update" method="post">
        <h3>Update data</h3>
        <div class="row mb-3">
          <label for="namaMahasiswa" class="col-sm-2 col-form-label"
            >Nama Mahasiswa</label
          >
          <div class="col-sm-10">
            <input
              type="text"
              class="form-control"
              id="namaMahasiswa"
              name="nama"
            />
          </div>
        </div>
        <div class="row mb-3">
          <label for="updateKelas" class="col-sm-2 col-form-label">Kelas baru</label>
          <div class="col-sm-10">
            <input
              type="text"
              class="form-control"
              id="updateKelas"
              name="updateKelas"
            />
          </div>
        </div>
        <button type="submit" class="btn btn-warning">Update</button>
      </form>
      <br>
      <form action="/delete" method="post">
        <h3>Hapus data</h3>
        <div class="row mb-3">
          <label for="IDMahasiswa" class="col-sm-2 col-form-label">ID</label>
          <div class="col-sm-10">
            <input
              type="text"
              class="form-control"
              id="IDMahasiswa"
              name="IDMahasiswa"
            />
          </div>
        </div>
        <button type="submit" class="btn btn-danger">Hapus</button>
      </form>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
